{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'profile.title' | trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        <button type="submit" class="btn btn-primary">{{ 'profile.update_button' | trans }}</button>
    {{ form_end(form) }}
{% endblock %}
